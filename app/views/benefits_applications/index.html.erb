<div class="card">
  <div class="emoji emoji-size-155 emoji--clipboard"></div>
  <h1>Submitted Applications</h1>
    <table class="data-table">
      <thead>
      <tr>
        <th>App number</th>
        <th>Date submitted</th>
        <th>Applicant</th>
      </tr>
      </thead>
      <tbody>
      <% @apps.each do |benefit_app| %>
        <tr>
          <td><%= benefit_app.id %></td>
          <td><%= benefit_app.created_at %></td>
          <td><%= benefit_app.email_address %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <%= link_to 'New Application', new_benefit_app_path , class: 'button button--primary' %>
</div>
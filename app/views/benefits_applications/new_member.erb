<%= form_with model: @member_form, url: { action: :create_member }, method: :post, local: true, builder: FoundationalProjectFormBuilder, class: "form-card" do |f| %>
  <h2>Tell us about yourself</h2>
  <%= f.vita_min_text_field(:first_name, "What's your first name?") %>
  <%= f.vita_min_text_field(:last_name, "What's your last name?") %>
  <%= f.vita_min_text_field(:date_of_birth, "What's your birthdate?", options: {type: "date"}) %>
  <%= render 'benefits_applications/member_list', locals: {members: @members} %>
  <%= f.button('Add Member →', type: :submit, formaction: create_member_path, class: "button spacing-above-60") %>
  <br />
  <form method="post" action="<%= validate_application_path %>">
    <button type=submit class="button button--wide button--primary" style="margin-left: 0.125rem">Continue →</button>
  </form>
<% end %>